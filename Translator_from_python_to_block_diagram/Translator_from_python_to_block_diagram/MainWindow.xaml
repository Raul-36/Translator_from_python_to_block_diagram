<Window x:Class="Translator_from_python_to_block_diagram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Translator_from_python_to_block_diagram"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="700*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>

        <UniformGrid Grid.Row="1" Columns="2" Background="LightGray">
            <TextBox x:Name="FilePathTextBox"/>
            <UniformGrid Columns="4">
                <Button Content="Open"/>
                <Button Margin="10" Content="Translate"/>
                <Button Margin="10" Content="Run" Background="LightGreen"/>
                <Button Margin="10" Content="Save" Background="LightGreen"/>
            </UniformGrid>
        </UniformGrid>
    </Grid>
</Window>
